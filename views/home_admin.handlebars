    <div class="container">
        <h1 class="text-center my-4">Admin Home</h1>
        <h2 class="text-center my-4">Livros Disponíveis</h2>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Título</th>
                        <th scope="col">Autor</th>
                        <th scope="col">Categoria</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each books}}
                    <tr>
                        <td>{{this.bookTitle}}</td>
                        <td>{{this.author}}</td>
                        <td>{{this.categorieName}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <a href="/admin/edit" class="btn btn-primary mt-4">Editar Livros e Categorias</a>
        <a href="/logout" class="btn btn-secondary mt-4">Logout</a>
    </div>
